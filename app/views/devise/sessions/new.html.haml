%h2.login-form Log in
.login-form
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f|
    .form-inputs.input-group
      = f.input :email, required: false, autofocus: true, class: 'form-control', placeholder: 'Email'
      = f.input :password, required: false, class: 'form-control', placeholder: 'Password'
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Log in", class: 'btn-primary'
  = render "devise/shared/links"
