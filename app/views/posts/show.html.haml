.posts-wrapper.row
  .post
    .post-head
      .name
        = post.user.user_name
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    - if @post.user.user_id == current_user.id
    .text-center.edit-links
      = link_to "Edit Post", edit_post_path(@post)
      |
      = link_to "Cancel", posts_path
    - else
    .text-center.edit-links
      = link_to "Cancel", posts_path
